<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition android:id="@+id/startToEnd"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end">
        <OnSwipe motion:dragDirection="dragDown"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorId="@id/bookCover"
            motion:touchAnchorSide="top"
            motion:touchRegionId="@id/bookCover"/>
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/materialCardView">
            <Layout
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintVertical_bias="0.35"
                android:layout_height="140dp"
                android:layout_width="140dp"
                />
            <Transform android:rotationX="-25"/>

        </Constraint>

        <Constraint android:id="@+id/bookCover">
            <Layout
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintVertical_bias="0.3"
                android:layout_width="wrap_content"
                android:layout_height="300dp"/>

            <Transform
                android:rotationX="0"
                android:translationX="0dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/bookCover">
            <Layout motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/materialCardView"
                android:layout_height="150dp"
                android:layout_width="wrap_content"/>

            <Transform android:rotationX="-25"
                android:translationY="135dp"/>
        </Constraint>

        <Constraint android:id="@+id/materialCardView">
            <Layout
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                android:layout_height="300dp"
                android:layout_width="300dp"
                motion:layout_constraintVertical_bias="0.3" />

            <Transform android:rotationX="0"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>