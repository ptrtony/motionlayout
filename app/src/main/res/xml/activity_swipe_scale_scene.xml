<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/activity_swipe_scale_motion_start"
        motion:constraintSetStart="@layout/activity_swipe_scale_motion_end"
